<!DOCTYPE html>
<html>
    <head>
    <title>List Leagues</title>
    </head>
    <body>
        <h1><center>List Leagues</center></h1>
        <form action="/" method="post">
        <table border = "1" style="width: 100%; height: 100%;"> 
            <thead>                
                <th>LID</th>
                <th>Year</th>
                <th>Season</th>
                <th>Title</th>       
                <th>Edit</th>
                <th>Delete</th>            
            </thead>
            <tbody>
                <% console.log(larr) %>
                <% for(var i=1;i<larr.length;i++){
                    let league = larr[i];
                %>    
                    <tr>
                        <td><%= league.LID %></td>
                        <td><%= league.year %></td>
                        <td><%= league.season %></td>
                        <td><%= league.title %></td>
                        <td><a href="/web/updateleague/<%=league.LID%>">Edit</a></td>
                        <td><a href="/web/deleteleague/<%=league.LID%>">Delete</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </form>
    <a href="/web/newLeague">New League</a>
    </body>
</html>



